  <!-- HTML page for the home screen -->
  {{#if expenses.length}}
  <div class="col-md-6 expense-list">
    <h3>Active Expenses:</h3>

    {{#each expenses as |expense|}}
    <div class="row mb-2" data-id="">
      <div class="col-md-8">
        <h4><a href="/expense/{{expense.id}}">{{expense.name}}</a></h4>
      </div>
      <div class="col-md-4">
        <button class="btn btn-sm btn-warning del-button" data-id="{{expense.id}}">REMOVE</button>
      </div>
    </div>
    {{/each}}
  </div>
  {{/if}}
</div>

<script src="/js/profile.js"></script>
